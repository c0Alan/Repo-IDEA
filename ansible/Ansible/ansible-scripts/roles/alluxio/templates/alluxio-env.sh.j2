export ALLUXIO_MASTER_HOSTNAME={{ hostvars[groups['alluxio_master'][0]]['ansible_nodename'] }}
export ALLUXIO_HOME={{ install_dir }}/alluxio/alluxio
export ALLUXIO_LOGS_DIR={{ logs_dir }}
export ALLUXIO_WORKER_MEMORY_SIZE={{ worker_mem_size }}
export ALLUXIO_RAM_FOLDER={{ ram_folder }}
export JAVA_HOME=/usr/java/jdk1.8.0_60
export JAVA=${JAVA_HOME}/bin/java
export ALLUXIO_JAVA_OPTS="$ALLUXIO_JAVA_OPTS -XX:+UseParNewGC -XX:+UseConcMarkSweepGC -XX:+HeapDumpOnOutOfMemoryError -XX:+ExplicitGCInvokesConcurrent -XX:+CMSClassUnloadingEnabled -XX:+AggressiveOpts"
export ALLUXIO_WORKER_JAVA_OPTS="-Xms1024M -Xmx1024M"
export ALLUXIO_MASTER_JAVA_OPTS="-Xms1024M -Xmx1024M"
