[Unit]
Description=sch-demo
After=network-online.target 
Wants=network-online.target

[Service]
User=root
Type=forking
WorkingDirectory=/opt/apps/springcloud-hoxton/sch-demo
ExecStart=/bin/bash -c "source /etc/profile && /bin/sh /opt/apps/springcloud-hoxton/sch-demo/bin/run.sh start"
ExecStop=/bin/bash -c "source /etc/profile && /bin/sh /opt/apps/springcloud-hoxton/sch-demo/bin/run.sh stop"
ExecStartPost=/usr/bin/sleep 5
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
