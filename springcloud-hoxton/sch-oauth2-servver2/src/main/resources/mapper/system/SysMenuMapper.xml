        SELECT DISTINCT m.menu_id, m.parent_id, m.menu_name, m.url, m.visible, IFNULL(m.perms,'') AS perms, m.menu_type,
        m.icon, m.order_num, m.create_time,ur.*
        FROM sys_menu m
        LEFT JOIN sys_role_menu rm ON m.menu_id = rm.menu_id
        LEFT JOIN sys_user_role ur ON rm.role_id = ur.role_id
        LEFT JOIN sys_role ro ON ur.role_id = ro.role_id
